LIBS = @LIBS@
LDFLAGS = @LDFLAGS@
CPPFLAGS = @CPPFLAGS@

HDF5 = @hdf_tar_install@

ifeq "locallibhdf5-@locallibhdf5@" "locallibhdf5-yes"
    CPPFLAGS += -I./hdf5/include/
    LDFLAGS += hdf5/lib/libhdf5.a -ldl
endif

ifeq "locallibzstd-@locallibzstd@" "locallibzstd-yes"
    zstd_local = ../zstd/lib/
    LDFLAGS += zstd/lib/libzstd.a
endif
